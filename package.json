{
  "name": "api",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "src/www"
      ],
      "extensions": "pug,css",
      "quiet": true
    }
  },
  "scripts": {
    "build": "npm run build:css && tsc",
    "start": "node --no-warnings dist/index.js",
    "build:css": "postcss src/www/style.css -o public/style.css",
    "dev": "concurrently \"tsc --watch\" \"nodemon --no-warnings -q dist/index.js\" \"npm-watch\""
  },
  "author": "MR-Addict",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "joi": "^17.7.0",
    "mqtt": "^4.3.7",
    "pug": "^3.0.2",
    "puppeteer-core": "^19.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.13.0",
    "@types/ws": "^8.5.4",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.20",
    "npm-watch": "^0.11.0",
    "postcss-cli": "^10.1.0",
    "postcss-minify": "^1.1.0",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  }
}
